<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="5dp">

    <RelativeLayout
            android:layout_width="384dp"
            android:layout_height="106dp"
            android:background="@android:color/white"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="5dp">

        <TextView
                android:id="@+id/tvb3"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:text="awayscore"
                android:textColor="#616161"
                android:textSize="19sp"
                android:textStyle="bold"

                android:layout_alignStart="@+id/tva" android:layout_marginStart="155dp"
                android:layout_alignTop="@+id/tva" android:layout_marginTop="28dp"/>
        <TextView
                android:id="@+id/tva2"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:textColor="#616161"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignStart="@+id/tvVS"
                android:layout_marginStart="234dp" android:layout_alignTop="@+id/tvVS" android:layout_marginTop="37dp"
                android:text="date"/>
        <TextView
                android:id="@+id/tvVS2"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:textColor="#616161"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="homescore" android:layout_alignParentEnd="true" android:layout_marginEnd="23dp"
                android:layout_alignTop="@+id/tvVS"/>
        <TextView
                android:id="@+id/tvVS"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:textColor="#616161"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="homename"/>
        <TextView
                android:id="@+id/tvb"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:text="awayname"
                android:textColor="#616161"
                android:textSize="18sp"
                android:textStyle="bold"

                android:layout_alignStart="@+id/tva" android:layout_marginStart="-40dp"
                android:layout_alignTop="@+id/tva" android:layout_marginTop="32dp"/>
        <TextView
                android:id="@+id/tva"
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:textColor="#616161"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignStart="@+id/tvVS"
                android:layout_marginStart="42dp" android:layout_alignTop="@+id/tvVS" android:layout_marginTop="38dp"
                android:text="VS"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>