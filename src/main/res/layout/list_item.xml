<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp">

    <RelativeLayout
            android:layout_width="384dp"
            android:layout_height="106dp"
            android:background="@android:color/white"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="5dp">

        <TextView
                android:id="@+id/tv_away_score"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                tools:text="@string/away_score"
                android:textColor="#616161"
                android:textSize="19sp"
                android:textStyle="bold"

                android:layout_alignStart="@+id/tv_VS" android:layout_marginStart="155dp"
                android:layout_alignTop="@+id/tv_VS" android:layout_marginTop="28dp"/>
        <TextView
                android:id="@+id/tva_date"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:textColor="#616161"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignStart="@+id/tv_home_name"
                android:layout_marginStart="234dp" android:layout_alignTop="@+id/tv_home_name" android:layout_marginTop="37dp"
                tools:text="@string/date"/>
        <TextView
                android:id="@+id/tv_home_score"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:textColor="#616161"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="@string/home_score" android:layout_alignParentEnd="true" android:layout_marginEnd="23dp"
                android:layout_alignTop="@+id/tv_home_name"/>
        <TextView
                android:id="@+id/tv_home_name"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:textColor="#616161"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="@string/home_name"/>
        <TextView
                android:id="@+id/tv_away_name"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                tools:text="@string/away_name"
                android:textColor="#616161"
                android:textSize="18sp"
                android:textStyle="bold"

                android:layout_alignStart="@+id/tv_VS" android:layout_marginStart="-40dp"
                android:layout_alignTop="@+id/tv_VS" android:layout_marginTop="32dp"/>
        <TextView
                android:id="@+id/tv_VS"
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:textColor="#616161"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignStart="@+id/tv_home_name"
                android:layout_marginStart="42dp" android:layout_alignTop="@+id/tv_home_name" android:layout_marginTop="38dp"
                tools:text="@string/vs"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>